# .editorconfig file
root = true

# 通用默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Java 文件特殊配置（常用 4 空格缩进）
[*.java]
indent_size = 4

# Markdown 文件：保留空格和结尾换行
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# YAML 文件（常见于 CI/CD）
[*.yml]
indent_size = 2

# XML 文件（如 pom.xml）
[*.xml]
indent_size = 2
